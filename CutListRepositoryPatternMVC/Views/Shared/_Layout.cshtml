<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CutListRepositoryPatternMVC</title>
    <!-- changed to use full bootstrap rather than minimum 'bootstrap.min.css' -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- CSS add in DataTables / jQuery UI / Toastr popups / SweetAlert popups / font and icons-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
</head>
<body>
    <header>
        <!-- yeti nav bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <!-- go to Factory home page -->
            <a class="navbar-brand" asp-area="Factory" asp-controller="Home" asp-action="Index">CutListRepositoryPatternMVC123</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <!-- NICE WAY TO STAY ON CURRENT PAGE
        <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
    </li>
    -->
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- dropdown -->
                    <!-- if manager or Admin user then show -->
                    @*@if (User.IsInRole(StaticDetails.Management) || User.IsInRole(StaticDetails.Admin))
                    {*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Option dropdown 123
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-light" asp-area="Engineer" asp-controller="Project" asp-action="Index">Project List</a>
                                <a class="dropdown-item text-light" asp-area="Engineer" asp-controller="WorkOrder" asp-action="Index">Work Order List</a>
                                <a class="dropdown-item text-light" asp-area="Engineer" asp-controller="PartOrder" asp-action="Index">Parts Order List</a>
                                <a class="dropdown-item text-light" asp-area="Factory" asp-controller="CutList" asp-action="Index">Cut List</a>
                                <a class="dropdown-item text-white" asp-area="Engineer" asp-controller="Frequency" asp-action="Index">Delivery Details</a>
                                <!-- user registration by Administrator -->
                                @*@if (User.IsInRole(StaticDetails.Admin))
        {*@
                                <a class="dropdown-item text-white" asp-area="Admin" asp-controller="User" asp-action="Index">User</a>
                                @*}*@
                            </div>
                        </li>
                    @*}*@


                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <!-- our Login / Register buttons -->
                <partial name="_LoginPartial" />
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CutListRepositoryPatternMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- insert the JavaScript for datatables / toastr / sweetAlert / fonts and icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.9.0/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <!-- my personal fontAwesome account -->
    <script src="https://kit.fontawesome.com/5f149fce31.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
